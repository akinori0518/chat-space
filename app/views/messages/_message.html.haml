

.message-list-box{data: {message: {id: message.id}}}
  .message-list-box__user-info
    .user-info__name
      = message.user.name
    .user-info__time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-list-box__message
    - if message.content.present?
      %p.message__content
        = message.content
    = image_tag message.image.url, class: 'message-list-box__message__image' if message.image.present?