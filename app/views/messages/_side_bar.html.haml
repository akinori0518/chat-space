.side-bar
  .side-bar__user-name
    .side-bar-box
      = current_user.name
      .side-bar-box__name
      .side-bar-box__icons
        .icon__new-group
          = link_to new_group_path, class: "decoration" do 
            = icon('far', 'edit', class: 'new-group')
        .icon__edit-user
          = link_to edit_user_path(current_user), class: "decoration" do
            = icon('fas', 'cog', class: 'edit-user')

  .side-bar__group-list
    - current_user.groups.each do |group|
      .group-list-box
        = link_to group_messages_path(group), class: "decoration" do
          .group-list-box__group-name
            = group.name
          .group-list-box__group-message
            = group.show_last_message